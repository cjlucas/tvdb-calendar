<div data-test-page-header class="bg-gray-50 border-b p-4 mb-8 flex flex-col gap-4 md:flex-row md:items-center justify-between dark:border-gray-800/50 dark:bg-inherit">
  <div class="flex flex-col gap-3 pt-1">
    <% if assigns[:breadcrumbs] && breadcrumbs.present? %>
      <nav class="flex" aria-label="Breadcrumb">
        <ol role="list" class="inline-flex items-center space-x-1 md:space-x-3">
          <% breadcrumbs.each_with_index do |breadcrumb, index| %>
            <li class="inline-flex items-center">
              <% if index > 0 %>
                <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
              <% end %>
              <% if breadcrumb.url %>
                <%= link_to breadcrumb.name, breadcrumb.url, class: "text-sm font-medium text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white no-underline" %>
              <% else %>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= breadcrumb.name %></span>
              <% end %>
            </li>
          <% end %>
        </ol>
      </nav>
    <% end %>
    <h2 class="text-2xl font-semibold"><%= page_title %></h2>
  </div>
  <% if action_items_for_action.present? %>
    <div data-test-action-items class="flex gap-2 flex-wrap lg:justify-end">
      <% action_items_for_action.each do |action_item| %>
        <%= instance_exec(&action_item.block) %>
      <% end %>
    </div>
  <% end %>
</div>